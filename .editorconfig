[*]
charset                               = utf-8
end_of_line                           = lf
insert_final_newline                  = true
indent_style                          = space
indent_size                           = 4
max_line_length                       = 120
trim_trailing_whitespace              = true
ij_any_align_group_field_declarations = true

[*.md]
insert_final_newline     = false
trim_trailing_whitespace = false

[*.{yaml,yml,js,vue,json,css,ts,cjs}]
indent_size = 2
